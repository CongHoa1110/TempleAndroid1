<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/iv_job_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_size_5"
            android:scaleType="center"
            android:src="@mipmap/job_icon" />

        <View
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <ImageView
            android:id="@+id/iv_place_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_size_5"
            android:src="@mipmap/place_icon" />

        <View
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <ImageView
            android:id="@+id/iv_notification_tab"
            android:layout_width="0dp"
            android:padding="@dimen/dimen_size_5"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/notification_icon" />

        <View
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <ImageView
            android:id="@+id/iv_message_tab"
            android:layout_width="0dp"
            android:padding="@dimen/dimen_size_5"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/message_icon" />

        <View
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <ImageView
            android:id="@+id/iv_information_tab"
            android:layout_width="0dp"
            android:padding="@dimen/dimen_size_5"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/information_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_1"
        android:background="@color/colorPrimary" />

</LinearLayout>